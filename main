import sys
sys.path.append("D:\python\Lib\site-packages")
import PIL.Image as pil
import numpy as np
#读取文件
pic=pil.open('D:\python\pic.png')
#把RGB图片变成灰度图像
l_pic=pic.convert('L')

#把灰度图像变成像素矩阵
matrix=np.asarray(l_pic)
#获得矩阵的特征
a,b=matrix.shape
#生成同样维数的零矩阵
new_pic=np.zeros((a,b))
#把高于220的坐标，变成白色
for i in range(452):
    for j in range(390):
        if int(matrix[i,j])>220:
            new_pic[i,j]=255
#把矩阵变成图像
img=pil.fromarray( new_pic)
print(type(img))

#存储图片,要把文件先转变为RGB格式
img=img.convert('RGB')
img.save("D:\python\img1.png")
